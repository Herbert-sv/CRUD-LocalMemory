@model TestProject.Models.Students
@{
    ViewData["Title"] = "github.com/Herbert-sv";
}

<h3 class="text-primary">Update List </h3>
<br />

<div class="form-horizontal ">
    <form asp-action="Update" asp-controller="Home" method="post">

        <div class="form-group">
            <label for="StudentId">Student Id</label>
            <br />
            <div class="col-md-6"> <input type="number" name="StudentId" class="form-control" value="@Model.StudentId" readonly /></div>
           </div>
        <div class="form-group">
            <label for="FirstName">First Name</label>
            <br />
            <div class="col-md-6">
                <input type="text" name="FirstName" value="@Model.FirstName" class="form-control " />
            </div>
        </div>
        <div class="form-group">
            <label for="LastName">Last Name</label>
            <br />
            <div class="col-md-6"><input type="text" name="LastName" value="@Model.LastName" class="form-control " /></div>
        </div>
        <div class="form-group">
            <label for="Career">Career</label>
            <br />
            <div class="col-md-6"><input type="text" name="Career" value="@Model.Career" class="form-control" /></div>
        </div>
        <div class="form-group">
            <label for="Institution">Institution</label>
            <br />
            <div class="col-md-6"><input type="text" name="Institution" value="@Model.Institution" class="form-control" /></div>
        </div>
        <div class="form-group">
            <label for="YearlyCost">Yearly Cost</label>
            <br />
            <div class="col-md-6"><input type="text" name="YearlyCost" value="@Model.YearlyCost" class="form-control" /></div>
        </div>
        <div class="form-group">
            <button class="btn btn-default">Update Info</button>
        </div>
    </form>
    <button class="btn btn-block btn-danger" id="Cform">Clear form</button>
</div>


